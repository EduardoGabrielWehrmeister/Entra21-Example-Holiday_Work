
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Tarefas</h2>

<form action="@Url.Action("Store")" method="post" id="needs-validation" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-usuario">Usuário</label>
                <select id="campo-usuario" name="idUsuario" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um Usuário</option>
                    @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                    {
                        <option value="@usuario.Id">@usuario.Nome</option>
                    }
                </select>

                <label for="campo-projeto">Projeto</label>
                <select id="campo-projeto" name="idProjeto" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um Projeto</option>
                    @foreach (Model.Projeto projeto in ViewBag.Projetos)
                    {
                        <option value="@projeto.Id">@projeto.Nome</option>
                    }
                </select>

                <label for="campo-categoria">Categoria</label>
                <select id="campo-categoria" name="idCategoria" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione uma Categoria</option>
                    @foreach (Model.Categoria categoria in ViewBag.Categorias)
                    {
                        <option value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>

                <label for="campo-titulo">Titulo</label>
                <input type="text" name="titulo" id="campo-titulo" class="form-control" required />
                <div class="invalid-feedback">Digite um Titulo Válido</div>

                <label for="campo-descricao">Descrição</label>
                <textarea type="text" name="descricao" id="campo-descricao" class="form-control" required></textarea>
                <div class="invalid-feedback">Digite uma Descrição Válida</div>

                <label for="campo-duracao">Duração</label>
                <input type="datetime" name="duracao" id="campo-duracao" class="tempo form-control" required />
                <div class="invalid-feedback">Digite uma Duração Válida</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right mt-3"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>

</form>

