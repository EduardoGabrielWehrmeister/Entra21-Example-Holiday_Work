
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Tarefas</h3>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3"><i class="fa fa-plus"></i> Novo Usuário</a>
    </div>
</div>

<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa"
                   placeholder="Busca"
                   class="form-control" />
        </div>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Duracao</th>
            <th>Categoria</th>
            <th>Projeto</th>
            <th>Usuário</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Tarefa tarefa in ViewBag.Tarefas)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Duracao</td>
                <th>@tarefa.Projeto.Nome</th>
                <th>@tarefa.Usuario.Nome</th>
                <th>@tarefa.Categoria.Nome</th>
                <td>
                    <a href="@Url.Action("Editar", new { id = tarefa.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Delete", new { id = tarefa.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Duracao</th>
            <th>Categoria</th>
            <th>Projeto</th>
            <th>Usuário</th>
        </tr>
    </tfoot>
</table>




