
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Tarefas</h2>

<a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3"><i class="fa fa-plus"></i> Novo Projeto</a>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Duracao</th>
            <th>Categoria</th>
            <th>Projeto</th>
            <th>Usuário</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Tarefa tarefa in ViewBag.Tarefas)
        {
            <tr>
                <td>@tarefa.Id</td>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Duracao</td>
                <td>@tarefa.Projeto.Nome</td>
                <td>@tarefa.Usuario.Nome</td>
                <td>@tarefa.Categoria.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = tarefa.Id})" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Apagar", new { id = tarefa.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Titulo</th>
            <th>Descricao</th>
            <th>Duracao</th>
            <th>Categoria</th>
            <th>Projeto</th>
            <th>Usuário</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>


