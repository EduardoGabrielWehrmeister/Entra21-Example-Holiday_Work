<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    @RenderPage("~/Views/Shared/Navbar.cshtml")

    <div class="container-fluid">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Estado/Cadastro.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/additional-methods.min.js"></script>
    <script src="~/Scripts/messages_pt_BR.min.js"></script>
    <!--
    <script src="~/Scripts/Cidade/Cadastro.js"></script>
    <script src="~/Scripts/Categoria/Cadastro.js"></script>
    <script src="~/Scripts/Usuario/Cadastro.js"></script>
    -->

    <script src="~/Scripts/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".cpf").mask("999.999.999-99")
        });
        $(document).ready(function () {
            $(".cep").mask("99999-999")
        });
    </script>

    <script type="text/javascript">
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.getElementById('needs-validation');
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }, false);
        })();
    </script>

</body>
</html>