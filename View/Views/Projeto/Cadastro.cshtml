
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Projetos</h2>

<form action="@Url.Action("Store")" method="post" id="needs-validation">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome do projeto</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" />

                <label for="campo-cliente">Cliente</label>
                <select id="campo-cliente" name="idCliente" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um Cliente</option>
                    @foreach (Model.Cliente cliente in ViewBag.Clientes)
                    {
                        <option value="@cliente.Id">@cliente.Nome</option>
                    }
                </select>

                <label for="campo-data-criacao">Data Criacao</label>
                <input type="date" name="dataCriacaoProjeto" id="campo-data-criacao" class="form-control" />

                <label for="campo-data-finalizacao">Cpf</label>
                <input type="date" name="datafinalizacao" id="campo-data-finalizacao" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right mt-3"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>

</form>


