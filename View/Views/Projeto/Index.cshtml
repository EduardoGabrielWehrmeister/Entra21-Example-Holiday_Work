
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Projetos</h2>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3"><i class="fa fa-plus"></i> Novo Usuário</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Nome do Cliente</th>
            <th>Data de Criacao</th>
            <th>Data de Finalizacao</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Projeto projeto in ViewBag.Projetos)
        {
            <tr>
                <td>@projeto.Id</td>
                <td>@projeto.Nome</td>
                <td>@projeto.Cliente.Nome</td>
                <td>@projeto.DataCriacaoProjeto</td>
                <td>@projeto.DataFinalizaca</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = projeto.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Delete", new { id = projeto.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Nome do Cliente</th>
            <th>Data de Criacao</th>
            <th>Data de Finalizacao</th>
        </tr>
    </tfoot>
</table>