
@{
    ViewBag.Title = "Index";
}

<h3>Cadastro de Usuários</h3>

<button class="btn btn-primary float-right mb-3" data-toggle="modal" data-target="#modalCadastroUsuario">
    <i class="fas fa-plus"></i> Novo Usuário
</button>

<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa" placeholder="Busca" class="form-control" />
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody id="lista-usuarios"></tbody>
</table>

<div class="modal fade" id="modalCadastroUsuario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastro de Usuários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="campo-nome">Nome</label>
                            <input type="text" id="campo-nome" class="form-control" />
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="campo-login">Login</label>
                            <input type="text" id="campo-login" class="form-control" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="campo-senha">Senha</label>
                            <input type="password" id="campo-senha" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="usuario-botao-salvar">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</div>


