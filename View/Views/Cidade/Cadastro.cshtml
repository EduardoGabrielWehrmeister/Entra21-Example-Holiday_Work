
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Cidades</h2>

<form action="@Url.Action("Store")" method="post">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-estado">Estado</label>
                <select id="campo-estado" name="idEstado" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um Estado</option>
                    @foreach (Model.Estado estado in ViewBag.Estados)
                    {
                        <option value="@estado.Id">@estado.Nome</option>
                    }
                </select>
                <label for="campo-nome">Nome da Cidade</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" />

                <label for="campo-numero-habitantes">Numero de Habitantes</label>
                <input type="text" name="numeroHabitantes" id="campo-numero-habitantes" class="form-control" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right mt-3"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>

</form>


