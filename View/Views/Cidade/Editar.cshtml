
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<form action="@Url.Action("Update")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Cidade.Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-estado">Estado</label>
                <select id="campo-estado" name="idEstado" class="form-control">
                    <option disabled="disabled" selected="selected">Selecione um Estado</option>
                    @foreach (Model.Estado estado in ViewBag.Estados)
                    {
                        if (estado.Id == ViewBag.Cidade.EstadoId)
                        {

                            <option value="@estado.Id" selected="selected">@estado.Nome</option>

                        }
                        else
                        {

                            <option value="@estado.Id">@estado.Nome</option>
                        }
                    }
                </select>
                <label for="campo-nome">Nome da Cidade</label>
                <input type="text" name="nome" id="campo-nome" class="form-control" value="@ViewBag.Cidade.Nome" />

                <label for="campo-numero-habitantes">Numero de Habitantes</label>
                <input type="text" name="numeroHabitantes" id="campo-numero-habitantes" class="form-control" value="@ViewBag.Cidade.NumeroHabitantes"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-success float-right mt-3"><i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>

</form>