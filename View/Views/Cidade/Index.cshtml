
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Cidades</h3>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3"><i class="fa fa-plus"></i> Novo Usuário</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome do Estado</th>
            <th>Nome da Cidade</th>
            <th>Numero de Habitantes</th>  
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Cidade cidade in ViewBag.Cidades)
        {
            <tr>
                <td>@cidade.Id</td>
                <td>@cidade.Estado.Nome</td>
                <td>@cidade.Nome</td>
                <td>@cidade.NumeroHabitantes</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = cidade.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Delete", new { id = cidade.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome do Estado</th>
            <th>Nome da Cidade</th>
            <th>Numero de Habitantes</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>





