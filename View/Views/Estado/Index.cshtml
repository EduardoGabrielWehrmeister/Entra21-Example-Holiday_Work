    
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Estados</h2>

<button class="btn btn-primary float-right mb-3" data-toggle="modal" data-target="#modalCadastroEstado">
    <i class="fas fa-plus" ></i> Novo Estado
</button>

<div class="row">
    <div class="col-3 offset-9">
        <div class="form-group">
            <input type="text" id="campo-pesquisa"
                   placeholder="Busca"
                   class="form-control" />
        </div>
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody id="lista-estados"></tbody>
</table>

<div class="modal fade" id="modalCadastroEstado" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastro de Estado</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="campo-nome">Estado</label>
                            <input type="text" id="campo-nome" class="form-control"/>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="campo-sigla">Sigla</label>
                            <input type="text" id="campo-sigla" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">              
                <button type="button" class="btn btn-success" id="estado-botao-salvar">
                <i class="fas fa-save"></i> Salvar</button>
            </div>
        </div>
    </div>
</div>
