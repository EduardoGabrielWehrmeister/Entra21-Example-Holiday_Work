
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Clientes</h2>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-primary float-right mb-3"><i class="fa fa-plus"></i> Novo Usuário</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Nome da Cidade</th>
            <th>Cep</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Cliente cliente in ViewBag.Clientes)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cpf</td>
                <td>@cliente.DataNascimento</td>
                <td>@cliente.Cidade.Nome</td>
                <td>@cliente.Cep</td>
                <td>@cliente.Numero</td>
                <td>@cliente.Complemento</td>
                <td>@cliente.Logradouro</td>              
                <td>
                    <a href="@Url.Action("Editar", new { id = cliente.Id})" class="btn btn-info"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Delete", new { id = cliente.Id})" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Data Nascimento</th>
            <th>Nome da Cidade</th>
            <th>Cep</th>
            <th>Numero</th>
            <th>Complemento</th>
            <th>Logradouro</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>